{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["@mf-types/**", "**/*.gen.ts"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 160,
		"indentWidth": 2,
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"noLabelWithoutControl": "off",
				"useSemanticElements": "off",
				"useFocusableInteractive": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"recommended": true
		}
	}
}
